<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_20"
        android:clipToPadding="false"
        android:elevation="@dimen/margin_5"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/radius_15"
        app:cardElevation="@dimen/margin_5">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_primary_radius_15"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/margin_15"
            android:paddingVertical="@dimen/margin_20">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/snackBarIcon"
                android:layout_width="@dimen/icon_size_40"
                android:layout_height="@dimen/icon_size_40"
                app:srcCompat="@drawable/ic_circle_notification" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/snackBarText"
                style="@style/font_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_weight="1"
                android:textColor="@color/colorGrayDarker"
                android:textSize="@dimen/text_size_14"
                tools:lines="1"
                tools:text="@tools:sample/lorem/random" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>
</merge>